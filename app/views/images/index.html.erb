<p id="notice"><%= notice %></p>

<%= image_tag("obsidian-image.png", style: 'height:auto;width:100%;', class: 'img-fluid') %> 
      <br><br>

<div class="row">
    
  <div class="container">
    <h1>
      <center>Featured Images</center>
    </h1>
    <br>
          <div class="row">
            <% @images.each do |image| %>
              <div class="col-sm-6 col-md-4 col-lg-3">
                <%= link_to image_tag(image.photo.variant(resize: '300x300!')), image %>

                <%#= image.title %>
                <%#= link_to 'Show', image %>
                <%#= link_to 'Edit', edit_image_path(image) %>
                <%#= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            <% end %>
          </div>
    <br>
    <div class="apple_pagination">
      <%= will_paginate @images, container: false %>
    </div>
    
    
    <h1>
      <center>Most Recent Images</center>
    </h1>
    <div class="row">
            <% @imagesrecent.each do |image| %>
              <div class="col-sm-6 col-md-4 col-lg-3">
                <%#= link_to image_tag(image.photo.variant(resize: '300x300!')), image %>
              </div>
            <% end %>
          </div>
  </div> <!-- container -->
</div> <!-- row -->


