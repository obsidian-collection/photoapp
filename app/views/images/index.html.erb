<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <div class="container-fluid">
  <h1>Digitizing Black History</h1>
  <p>Sharing our African American Images</p>
  </div>
</div>


<div class="row">
  <% @images.each do |image| %>
    <div class="col-sm-3">
    <div class="img-fluid">
      <%= link_to image_tag(image.photo.variant(resize: '300x300!')), image %>
    </div>
      <%= image.title %>
        
      <%#= link_to 'Show', image %>
      <%#= link_to 'Edit', edit_image_path(image) %>
      <%#= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>
</div>

